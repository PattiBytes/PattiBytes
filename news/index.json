---
layout: null
permalink: /news/index.json
---
{
  "generated_at": "{{ site.time | date_to_xmlschema }}",
  "items": [
  {% assign sorted = site.news | sort: "date" | reverse %}
  {% for article in sorted %}
    {
      "id": "{{ article.id | default: article.slug | slugify }}",
      "slug": "{{ article.slug | default: article.id | slugify }}",
      "title": {{ article.title | jsonify }},
      "preview": {{ article.preview | default: article.excerpt | jsonify }},
      "content": {{ article.content | jsonify }},
      "date": "{{ article.date | date_to_xmlschema }}",
      "author": {{ article.author | default: site.author.name | jsonify }},
      "tags": {{ article.tags | jsonify }},
      "image": {{ article.image | jsonify }},
      "url": "{{ article.url | relative_url }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  ]
}
