            <tr>
              <th class="num">#</th>
              <th>Item Details</th>
              <th class="amt">Amount</th>
            </tr>
          </thead>
          <tbody>
            ${rows || `<tr><td class="td" colspan="3" style="text-align:center;color:#666;font-weight:900">No items found</td></tr>`}
          </tbody>
        </table>

        <div class="totals">
          <div class="row"><span class="label">Subtotal</span><span class="value">${toINR(order.subtotal)}</span></div>
          ${discountRow}
          <div class="row"><span class="label">Tax (GST)</span><span class="value">${toINR(order.tax)}</span></div>
          <div class="row"><span class="label">Delivery Fee</span><span class="value" style="color:#666;font-size:11px">${toINR(order.deliveryFee)} (Driver's share)</span></div>
          <div class="grand">
